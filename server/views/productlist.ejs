<%- include('navbartop'); -%>
<div class="w-full bg-stone-100 p-10 mt-14">
  <h1 class="text-3xl font-bold pb-10">Order List</h1>
  <div class="w-full bg-slate-100 p-5 rounded-md shadow-md">
    <form action="./searchproduct" method="get">
      <div class="flex w-72 border border-slate-400 rounded-md">
        <input
          class="outline-none w-full mx-3 my-2 bg-transparent"
          type="text"
          placeholder="Search order"
          name="search"
        />
        <button type="submit">
          <i class="fa-solid fa-magnifying-glass mx-3 my-2"></i>
        </button>
      </div>
    </form>
    <div class="w-full">
      <% for (i=0; i < data.length; i++) { %>
      <div
        class="w-full bg-white rounded-md py-3 px-5 mt-5 flex items-center justify-between"
        key
      >
        <div class="flex gap-3 items-center w-60">
          <img
            class="w-20 h-20 object-contain"
            src="/public\\images\\<%=data[i].image_name.split(',')[0]%>"
            alt=""
          />
          <p><%=data[i].name%></p>
        </div>
        <div class="flex gap-5 w-96">
          <p class="w-20"><%=data[i].category%></p>
          <p class="w-20"><%=data[i].subcategory%></p>
          <p class="w-20"><%=data[i].brand%></p>
          <p class="w-20"><%=data[i].offer_price%></p>
        </div>
        <div>
          <a
            class="p-2 bg-cyan-400 rounded-md mr-5"
            href="./deleteproduct?id=<%=data[i].product_id%>"
            >delete</a
          >
          <a
            class="p-2 bg-cyan-400 rounded-md"
            href="./updateproduct?id=<%=data[i].product_id%>"
            >update</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
<%- include('navbarbottom'); -%>
